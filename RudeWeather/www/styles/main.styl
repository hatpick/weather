html, body    
  font-family: 'Open Sans', sans-serif
  background-repeat: repeat  
  font-size: 100%
  padding:0px
  margin:0px
  background:#fff
  height: 100%
  color:#000
  font-family:"Helvetica Neue",Helvetica,Arial,sans-serif !important
  overflow:hidden !important
  width:100%
  user-select: none !important
  -webkit-user-select: none !important

*
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0)

.main-container
  position: fixed
  width: 100%
  height: 100%
  overflow:hidden !important
  top:0px
  left:0px

brad()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
  -moz-transform: scale(arguments)
  -webkit-transform: scale(arguments)
  -o-transform: scale(arguments)


a
  color:inherit

a:hover
  color:inherit

button
  border:0px solid #fff
  background:transparent
  padding:0px
  margin:0px
  cursor:pointer

button:focus
  outline:none

.datapp-weather
  height: 100%
  width: 100%

.datapp-weather-login
  height: 100%
  width: 100%
  padding: 0 35px
  background: rgb(176,212,227)
  background: -moz-linear-gradient(top,  rgba(176,212,227,1) 0%, rgba(136,186,207,1) 100%)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(176,212,227,1)), color-stop(100%,rgba(136,186,207,1)))
  background: -webkit-linear-gradient(top,  rgba(176,212,227,1) 0%,rgba(136,186,207,1) 100%)
  background: -o-linear-gradient(top,  rgba(176,212,227,1) 0%,rgba(136,186,207,1) 100%)
  background: -ms-linear-gradient(top,  rgba(176,212,227,1) 0%,rgba(136,186,207,1) 100%)
  background: linear-gradient(to bottom,  rgba(176,212,227,1) 0%,rgba(136,186,207,1) 100%)

.login-container
  position: relative
  top: 50%
  -webkit-transform: translateY(-50%)
.login-top-area
  position: absolute
  top:20%
  left: 0
  right: 0

.login-title
  font-size: 32px
  color: #284453

.datapp-text
  font-weight: 200
  font-size: 14px


.time-bg
  z-index: 0
  height: 100%
  width: 100%

.weather-location
  padding: 5px
  font-size: 24px
  font-weight: 100
  color: #fff
  display: inline-block
  font-family: Helvetica, Sans-Serif

.weather-current-temperature
  display: inline-block
  float: right
  padding: 5px
  color: #ffffff
  font-size: 42px
  font-weight:300

.weather-condition
  text-align: center

.weather-icon
  width:100%
  text-align:center
  margin-top: 120px

.weather-icon .weather-img-icon
  height: 100px
  transition: 1s all linear

.weather-description
  color: #FF9D47
  font-weight: 200
  letter-spacing: 0.1px
  padding: 5px

.weather-img-icon
  -webkit-animation-name: scalex
  -webkit-animation-duration:1.5s
  -webkit-animation-iteration-count:infinite
  -webkit-animation-timing-function:ease-in-out
  -moz-animation-name: scale
  -moz-animation-duration:1.5s
  -moz-animation-iteration-count:infinite
  -moz-animation-timing-function:ease-in-out

@-webkit-keyframes scalex
  from
    -webkit-transform: scale(0.95)
  50%
    -webkit-transform: scale(1)
  to
    -webkit-transform: scale(0.95)

.rude-description
  position: absolute
  bottom: 30px
  border-top: 1px solid #37A6F6
  width: 95%
  margin-left: auto
  margin-right: auto
  left: 0
  right: 0
  text-align: center
  color: #fff
  font-weight: 300
  padding: 5px

